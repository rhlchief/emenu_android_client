<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cover"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="100dp"
        android:src="@drawable/logo_large" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/logo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/tips_frame"
        android:paddingLeft="20dp"
        android:textColor="@color/text_red" />

    <Button
        android:id="@+id/btn_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_login"
        android:layout_alignLeft="@id/logo"
        android:background="@drawable/btn_cover_lock" />

    <Button
        android:id="@+id/btn_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_login"
        android:layout_toRightOf="@id/btn_lock"
        android:background="@drawable/btn_cover_tableware" />

    <Button
        android:id="@+id/btn_table_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_login"
        android:layout_toRightOf="@id/btn_table"
        android:background="@drawable/btn_cover_table" />

    <Button
        android:id="@+id/btn_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_login"
        android:layout_toRightOf="@id/btn_table_info"
        android:background="@drawable/btn_cover_manage" />

    <Button
        android:id="@+id/btn_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_login"
        android:layout_toRightOf="@id/btn_manage"
        android:background="@drawable/btn_cover_info" />

</RelativeLayout>