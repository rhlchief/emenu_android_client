<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.cloudmenu.emenu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:name="net.cloudmenu.emenu.Application"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme" >
        <activity
            android:name="net.cloudmenu.emenu.activity.Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <!-- category android:name="android.intent.category.HOME" / -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.cloudmenu.emenu.activity.MainTabHost"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.cloudmenu.emenu.activity.MenuTabHost"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.cloudmenu.emenu.activity.MenuGallery"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.cloudmenu.emenu.activity.MenuList"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.cloudmenu.emenu.activity.OrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.cloudmenu.emenu.activity.CommentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.cloudmenu.emenu.activity.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.cloudmenu.emenu.activity.PictureGallery"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.cloudmenu.emenu.activity.PreferencesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="net.cloudmenu.emenu.activity.MenuGalleryBrowseActivity"
            android:label="@string/title_activity_menu_gallery_browse" >
        </activity>
        <activity
            android:name="net.cloudmenu.emenu.activity.MenuGridActivity"
            android:label="@string/title_activity_menu_grid" >
        </activity>
    </application>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

</manifest>