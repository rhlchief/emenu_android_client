<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <cn.buding.common.widget.AsyncImageView
            android:id="@+id/image"
            style="@style/Widget.AsyncImageView.Default"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:padding="5dp"
                android:text="宝岛cc卤肉饭"
                android:textAppearance="@style/TextAppearance.Black" />

            <net.cloudmenu.emenu.widget.StarRatingBar
                android:id="@+id/pepper_bar"
                style="@style/PepperStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_name" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/tv_name"
                android:background="@drawable/divider_white" />

            <!--<TextView-->
                <!--android:id="@+id/tv_price"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:background="@drawable/price_plate"-->
                <!--android:gravity="center"-->
                <!--android:text="￥47.0"-->
                <!--android:textAppearance="?android:attr/textAppearanceInverse" />-->

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_name"
                android:lines="3"
                android:padding="2dp"
                android:text="配料：五花肉，姜末，生抽，老抽，八角，料酒，冰糖，五香粉，胡椒粉" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@color/text_selected_red">
                <Button
                    android:id="@+id/btn_sub"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:minEms="2"
                    android:text="0"
                    android:textAppearance="@style/TextAppearance.White"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_add" />
            </LinearLayout>
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="right"-->
                <!--android:text="Count"-->
                <!--android:textAppearance="@style/TextAppearance.Red" />-->

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="$47.0"
                android:textAppearance="@style/TextAppearance.Black"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/soldout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_soldout"
        android:visibility="gone" />

</merge>